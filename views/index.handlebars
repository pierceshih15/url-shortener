<div class="container mt-3">
  <!-- 提示訊息 -->
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="alert alert-warning d-none" id="hint-message" role="alert"></div>
      {{#if errorMessage}}
      <div class="alert alert-danger" role="alert" id="error-message">
        {{{errorMessage}}}
      </div>
      {{/if}}
    </div>
  </div>

  <!-- 輸入欄位 -->
  <div class="row">
    <div class="col-md-6 m-auto">
      <form action="/getShortenUrl" method="post" id="shortener-form">
        <div class="form-group">
          <input type="url" class="form-control" name="originalUrl" id="original-url-input"
            value="{{{newOriginalUrl}}}">
        </div>
        <div class="m-auto text-center">
          <button type="submit" class="btn btn-outline-dark">Shorten!</button>
        </div>
      </form>

      <div class="mt-3">
        {{#if baseUrl}}
        <div class="alert alert-success" role="alert" id="error-message">
          <p>Link shortening successful!</p>
          <span>Visit your website at </span>
          <a target="_blank" href="/{{{exitShortId}}}{{{newShortId}}}">
            {{{baseUrl}}}{{{exitShortId}}}{{{newShortId}}}
          </a>
        </div>
        {{/if}}
      </div>

    </div>
  </div>
</div>